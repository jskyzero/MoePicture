<Page
    x:Class="MoePicture.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MoePicture.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <NavigationView
        x:Name="NavView"
        ExpandedModeThresholdWidth="1480"
        SelectionChanged="NavViewSelectionChanged">

        <!--<NavigationView.MenuItems>
            <NavigationViewItem Content="Yande">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xEB9F;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Konachan">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xEB9F;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
            <NavigationViewItem Content="Danbooru">
                <NavigationViewItem.Icon>
                    <FontIcon Glyph="&#xEB9F;" />
                </NavigationViewItem.Icon>
            </NavigationViewItem>
        </NavigationView.MenuItems>-->

        <NavigationView.AutoSuggestBox>
            <AutoSuggestBox
                x:Name="ASB"
                QueryIcon="Find"
                QuerySubmitted="QuerySubmitted" />
        </NavigationView.AutoSuggestBox>

        <NavigationView.HeaderTemplate>
            <DataTemplate>
                <!--  you never see it  -->
                <Grid
                    Height="48px"
                    Background="White"
                    Opacity="0" />
            </DataTemplate>
        </NavigationView.HeaderTemplate>

        <NavigationView.PaneFooter>
            <NavigationViewItem
                Content="Help"
                Icon="Help"
                Tapped="NavigationViewItem_Tapped" />
        </NavigationView.PaneFooter>

        <Frame x:Name="ContentFrame" Margin="0,-48,0,0">
            <Frame.ContentTransitions>
                <TransitionCollection>
                    <NavigationThemeTransition />
                </TransitionCollection>
            </Frame.ContentTransitions>
        </Frame>
    </NavigationView>
    <VisualStateManager.VisualStateGroups>
        <VisualStateGroup>
            <VisualState>
                <VisualState.StateTriggers>
                    <AdaptiveTrigger MinWindowWidth="1920" />
                </VisualState.StateTriggers>
                <VisualState.Setters>
                    <Setter Target="NavView.IsPaneOpen" Value="true" />
                </VisualState.Setters>
            </VisualState>
        </VisualStateGroup>
    </VisualStateManager.VisualStateGroups>
</Page>
