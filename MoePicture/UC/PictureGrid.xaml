<UserControl
    x:Class="MoePicture.UC.PictureGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CC="using:CustomControl"
    xmlns:Converters="using:MoePicture.Converters"
    xmlns:Models="using:MoePicture.Models"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MoePicture.UC"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Converters:IntBoolConverter x:Key="IntBoolConverter" />

        <DataTemplate x:Key="PictureItem" x:DataType="Models:PictureItem">
            <Grid
                Margin="8"
                Loaded="RootGrid_Loaded"
                SizeChanged="RootGrid_SizeChanged">
                <Image Source="{Binding ImageSource}" Stretch="UniformToFill" />
                <Border x:Name="MaskBorder" Background="#50000000">
                    <StackPanel>
                        <TextBlock
                            Margin="12"
                            Foreground="White"
                            Text="{Binding Title}"
                            TextWrapping="Wrap" />
                        <TextBlock
                            Margin="12"
                            Foreground="White"
                            Text="{Binding PreviewSize.Width}"
                            TextWrapping="Wrap" />
                        <TextBlock
                            Margin="12"
                            Foreground="White"
                            Text="{Binding PreviewSize.Height}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
            </Grid>
        </DataTemplate>

        <Style x:Key="GridViewItemStyle" TargetType="GridViewItem">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
    </UserControl.Resources>
    <Grid DataContext="{Binding PicturesVM, Source={StaticResource Locator}}">
        <ProgressRing IsActive="{Binding PictureItems.Count, Converter={StaticResource IntBoolConverter}, Mode=OneWay}" Style="{StaticResource MyProgressRingStyle}" />
        <CC:AdaptiveGridView
            IsItemClickEnabled="True"
            ItemClick="GridView_ItemClick"
            ItemContainerStyle="{StaticResource GridViewItemStyle}"
            ItemTemplate="{StaticResource PictureItem}"
            ItemsSource="{Binding PictureItems}"
            MinItemHeight="{Binding ConfigVM.Config.PictureItemSize, Source={StaticResource Locator}, Mode=OneWay}"
            MinItemWidth="{Binding ConfigVM.Config.PictureItemSize, Source={StaticResource Locator}, Mode=OneWay}" />
    </Grid>
</UserControl>
