<UserControl
    x:Class="MoePicture.UC.ButtonBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MoePicture.UC"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

  <Grid>
    <Grid HorizontalAlignment="Left"
          VerticalAlignment="Top"
          Margin="12, 12, 0, 0"
          Background="Transparent">
      <Canvas Background="Black" Opacity="0.5" />
      <StackPanel Orientation="Horizontal">
        <Button DataContext="{Binding PicturesVM, Source={StaticResource Locator}}"
                Command="{Binding RefreshCommand}"
                Style="{StaticResource  CustomButtonStyle}">
          <FontIcon Height="60" Width="60" FontFamily="Segoe MDL2 Assets" Glyph="&#xE700;" Foreground="White" />
        </Button>
        <TextBlock DataContext="{Binding PicturesVM, Source={StaticResource Locator}}"
                   Text="{Binding Tag}"
                   FontSize="36" VerticalAlignment="Center" Foreground="White" />
        <Button DataContext="{Binding MainVM, Source={StaticResource Locator}}"
                Command="{Binding ShowSearchCommand}"
                Style="{StaticResource  CustomButtonStyle}">
          <SymbolIcon Symbol="Find" Height="60" Width="60" Foreground="White" />
        </Button>
      </StackPanel>
    </Grid>

    <Grid  HorizontalAlignment="Right"
          VerticalAlignment="Bottom"
          Margin="0, 0, 48, 48"
          Background="Transparent">
      <StackPanel>
        <Button DataContext="{Binding PicturesVM, Source={StaticResource Locator}}"
                Command="{Binding RefreshCommand}"
                Background="Transparent" Template="{StaticResource CircleButtonControl}">
          <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE149;" FontSize="30"
                       VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" />
        </Button>
      </StackPanel>
    </Grid>
  </Grid>
</UserControl>
