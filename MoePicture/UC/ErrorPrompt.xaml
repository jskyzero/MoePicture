<UserControl
    x:Class="MoePicture.UC.ErrorPrompt"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MoePicture.UC"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid>
        <Grid Background="Black" Opacity="0.8" />
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock
                Padding="10"
                Foreground="White"
                Style="{StaticResource HeaderTextBlockStyle}"
                TextWrapping="Wrap">
                <Run Text=" An error occurred" />
            </TextBlock>
            <TextBlock
                Padding="10"
                Foreground="White"
                TextWrapping="Wrap">
                <Run Text="Please click the refresh button, If it can't help, please check your internet connection and restart MoePicture application." />
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
