<UserControl
    x:Class="MoePicture.UC.ErrorPrompt"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MoePicture.UC"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    DataContext="{Binding ShellVM, Source={StaticResource Locator}}"
    mc:Ignorable="d">

    <Grid>
        <Grid Background="Black" Opacity="0.8" />
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock
                Padding="10"
                Foreground="White"
                Style="{StaticResource HeaderTextBlockStyle}"
                TextWrapping="Wrap">
                <Run Text="出现了个错误" />
            </TextBlock>
            <TextBlock
                Padding="10"
                Foreground="White"
                TextWrapping="Wrap">
                <Run Text="请单击刷新按钮，如果它无法帮助，请检查您的Internet连接并重新启动MoePicture应用程序。" />
            </TextBlock>
            <TextBlock
                Padding="10,10,10,0"
                Foreground="White"
                Text="错误信息如下" />
            <TextBox
                Margin="10,0,10,0"
                Foreground="White"
                Text="{Binding ErrorMessage, Mode=OneWay}" />

        </StackPanel>
    </Grid>
</UserControl>
